<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/nav.css">
    <script src="/js/utils.js"></script>
</head>
<body>
    <div class="menu">
        <div class="menu__logo">
            <a href="/"><img srcset="../img/logo.png, img/logo.png" src="img/logo.png" alt="Kursy"></a>
        </div>
        <div class="menu__dropdown">
            <a href="#"><button class="menu__dropdown__btn">Kategorie &nbsp<div class="arrow arrow--down"></div></button></a>
            <div class="menu__dropdown__content">
                <script>
                    var menu = document.getElementsByClassName('menu__dropdown__content')[0];

                    dataFetch('/get_categories')
                        .then(data => {
                            for(i = 0; i < data.length; i++){
                            menu.innerHTML += "<a href='/coursesByCategory/" + data[i] + "'>" + data[i] + "</a>";
                        }
                        })
                </script>
            </div>
        </div>
        <div class="menu__search">
            <form method="GET" action="/search/">
                <input type="search" placeholder="Szukaj" name="search">
            </form>
        </div>
        <div class="menu__login">
            <a href="#">
                <button class="btn menu__login__btn">Zaloguj się</button>
            </a>
            <a href="#">
                <button class="btn menu__register__btn">Zarejestruj się</button>
            </a>
        </div>
    </div>
</body>
</html>